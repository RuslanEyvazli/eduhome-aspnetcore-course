@model IEnumerable<Blog>
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slider Table</h4>

                <a asp-controller="BlogCRUD" asp-action="Create" class="btn btn-success"><i class="mdi mdi-calendar-plus">Create</i></a>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Setting
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Blog blog in Model)
                            {
                                <tr>
                                    <td class="py-1">
                                        <img style="width:150px !important;height:150px !important " src="~/img/blog/@blog.Image" alt="image" />
                                    </td>
                                    <td>
                                        @blog.Explain
                                    </td>
                                    <td>
                                        <a asp-controller="BlogCRUD" asp-action="Detail" asp-route-id="@blog.Id" class="btn btn-success"><i class="mdi mdi-account-card-details">Detail</i></a>
                                        <a asp-controller="BlogCRUD" asp-action="Edit" asp-route-id="@blog.Id" class="btn btn-primary "><i class="mdi mdi-table-edit">Edit</i></a>
                                        <a asp-controller="BlogCRUD" asp-action="Delete" asp-route-id="@blog.Id" class="btn btn-danger"><i class="mdi mdi-delete-forever">Delete</i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

