@model Blog
@{
    ViewData["Title"] = "Detail";
}

<div class="row">
    <div class="col-md-12">
        <img style="width:200px !important;height:200px !important" src="~/img/blog/@Model.Image" alt="Alternate Text" />
    </div>
    <div class="col-md-12">
        <form method="post" enctype="multipart/form-data">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Photo"></label>
                    <input class="form-control" asp-for="Photo" accept="image/*">
                    <span asp-validation-for="Photo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AuthorName"></label><br>
                    <input class="form-control" asp-for="AuthorName" /><br />
                    <label asp-for="BlogBody"></label><br>
                    <textarea class="form-control" asp-for="BlogBody" id="editor"></textarea><br />
                    <label asp-for="Date"></label><br />
                    <input class="form-control" asp-for="Date" /><br />
                    <label asp-for="Explain"></label><br />
                    <input class="form-control" asp-for="Explain" /><br />
                    <label asp-for="PreTitle"></label><br />
                    <input class="form-control" asp-for="PreTitle" /><br />
                </div>
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <a class="btn btn-facebook" asp-action="Index">Go Back</a>
            </div>



        </form>
    </div>

</div>



@section Scripts{
    <partial name="_ValidationAdminParial" />
    <script src="https://cdn.ckeditor.com/ckeditor5/20.0.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });
    </script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor1'))
            .catch(error => {
                console.error(error);
            });
    </script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor2'))
            .catch(error => {
                console.error(error);
            });
    </script>

}